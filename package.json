{
  "name": "groceries",
  "version": "2.0.0",
  "description": "All groceries and no seriousness",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "postinstall": "npm run bundle",
    "serve-bundle": "webpack-dev-server --progress --colors",
    "serve-webpack": "webpack-dev-server --port 8090",
    "bundle": "mkdir -p public/js ; rm public/js/* ; NODE_ENV=production webpack --config webpack.prod.config.js && json-manifest public js/*.js > public/js/manifest.json",
    "lint": "eslint server universal index.js"
  },
  "author": "Phillip Johnsen <phillip@lightweight.no>",
  "engines": {
    "node": "0.11.x"
  },
  "private": true,
  "license": "MIT",
  "dependencies": {
    "babel-runtime": "^5.8.20",
    "immutable": "^3.6.2",
    "json-manifest": "^1.0.1",
    "react": "^0.13.3",
    "reflux": "^0.2.12",
    "webpack": "^1.5.3",
    "xhr": "^2.0.1"
  },
  "devDependencies": {
    "babel": "^5.8.21",
    "babel-core": "^5.8.22",
    "babel-eslint": "^4.0.7",
    "babel-loader": "^5.3.2",
    "eslint": "^1.1.0",
    "eslint-config-standard": "^4.1.0",
    "eslint-plugin-standard": "^1.2.0",
    "react-hot-loader": "^1.1.5",
    "webpack-dev-server": "^1.7.0"
  }
}
